<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fenil.hackathon">

    <application
        android:name=".AnyConfessApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_baseline_recent_actors_24"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_baseline_recent_actors_24"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hackathon">
        <activity android:name=".CreatePost"/>
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".CommentDialog"
            android:excludeFromRecents="true"/>
    </application>

</manifest>